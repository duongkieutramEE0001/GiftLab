<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS chính -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ================= HEADER ================= -->
    <header class="gl-header">

        <!-- ========== TOP BAR (SLIDER NGANG) ========== -->
        <div class="gl-top-bar">
            <div class="gl-slider-horizontal">
                <div class="gl-slide">✨ CHÀO MỪNG BẠN ĐẾN VỚI GIFTLAB ✨ </div>
                <div class="gl-slide">MIỄN PHÍ VẬN CHUYỂN CHO ĐƠN HÀNG TỪ 300K</div>
                <div class="gl-slide">GIẢM 20% CHO TOÀN BỘ SẢN PHẨM THUỘC BST MỚI RA MẮT</div>
            </div>
        </div>

        <!-- ========== MAIN HEADER (ICONS + LOGO) ========== -->
        <div class="gl-main-header">

            <!-- Icons bên trái -->
            <div class="gl-main-icons gl-main-icons-left">
                <a href="#"><img src="~/images/fb-icon.png" class="gl-icon" alt="Facebook" /></a>
                <a href="#"><img src="~/images/ig-icon.png" class="gl-icon" alt="Instagram" /></a>
            </div>

            <!-- Logo chính giữa -->
            <div class="gl-logo-wrapper">
                <a href="/">
                    <img src="~/images/logo.png" class="gl-logo" alt="GiftLab" />
                </a>
            </div>

            <!-- Icons bên phải -->
            <div class="gl-main-icons gl-main-icons-right">
                <a href="#"><img src="~/images/search-icon.png" class="gl-icon" alt="Tìm kiếm" /></a>
                <a href="#"><img src="~/images/wishlist-icon.png" class="gl-icon" alt="Yêu thích" /></a>
                <a href="#"><img src="~/images/cart-icon.png" class="gl-icon" alt="Giỏ hàng" /></a>
                <a href="#"><img src="~/images/user-icon.png" class="gl-icon" alt="Tài khoản" /></a>
            </div>

        </div>

        <!-- ========== NAVIGATION MENU ========== -->
        <nav class="gl-nav">
            <ul class="gl-nav-list">
                <li><a href="/">TRANG CHỦ</a></li>
                <li><a href="/about">VỀ CHÚNG TÔI</a></li>
                <li><a href="/shop">CỬA HÀNG</a></li>
                <li><a href="/cute-things">ĐIỀU NHỎ XINH</a></li>
                <li><a href="/support">HỖ TRỢ</a></li>
            </ul>
        </nav>
    </header>

    <!-- ================= NỘI DUNG TRANG ================= -->
    <div class="gl-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
